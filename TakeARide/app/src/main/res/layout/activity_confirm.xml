<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/titleBackground"
		android:padding="@dimen/screenEdge"
		android:text="@string/confirm_title"
		android:textStyle="bold"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/riderView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/screenEdge"
			android:layout_marginTop="@dimen/screenEdge"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/fareView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/screenEdge"
			android:layout_marginLeft="@dimen/screenEdge"/>

	</LinearLayout>

</LinearLayout>