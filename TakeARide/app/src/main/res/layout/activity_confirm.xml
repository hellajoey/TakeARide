<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/titleView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/titleBackground"
		android:padding="@dimen/screenEdge"
		android:text="@string/confirm_title"
		android:textStyle="bold"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/titleView"
		android:orientation="vertical">

		<TextView
			android:id="@+id/riderView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/screenEdge"
			android:layout_marginTop="@dimen/screenEdge"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/fareView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/screenEdge"
			android:layout_marginLeft="@dimen/screenEdge"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/titleView"
		android:orientation="vertical">

		<Button
			android:id="@+id/moreButton"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/screenEdge"
			android:background="@color/itemBackground"
			android:text="+"/>

		<TextView
			android:id="@+id/quantityView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="1"
			android:textStyle="bold"/>

		<Button
			android:id="@+id/fewerButton"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/screenEdge"
			android:background="@color/itemBackground"
			android:text="-"/>

	</LinearLayout>

	<Button android:id="@+id/confirmButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_margin="@dimen/screenEdge"
		android:background="@color/darkButtonBackground"
		android:text="%%%"
		android:textColor="@color/darkButtonText"/>

</RelativeLayout>